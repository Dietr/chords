<div class="c-chord-box">
  <div class="c-chord-box__string">
    {% for i in (1..5) %}
    {% assign fret = start | remove: "2-" remove:"fr" %}
    {% if i == 1 %}
    <div class="c-chord-box__fret">
      {% if start contains "1-" %}
      <span class="c-chord-box__marker">{{ start | remove: "1-" }}</span>
      {% endif %}
      {% if E contains "1" %}
      <span class="c-chord-box__note{% if E contains '1r' %} c-chord-box__note--root{% endif %}"></span>
      {% endif %}
    </div>
    {% endif %}
    {% if i == 2 %}
    <div class="c-chord-box__fret">
      {% if start contains "2-" %}
